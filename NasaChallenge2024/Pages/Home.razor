@page "/"
@inject IJSRuntime JsRuntime

<PageTitle>INDEX</PageTitle>

<img class="logo" src="images/exoplan.svg" alt="logo"/>

<img class="avatar" src="images/avatar.svg" alt="avatar"/>
<div class="score">654</div>

<div class="menu">
    <button class="menu-item" autofocus>INDEX</button>
    <button class="menu-item">Observatories</button>
    <button class="menu-item">Class Work</button>
    <button class="menu-item">Table</button>
</div>

@code
{
    private IJSObjectReference _mainJsModule;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }

        _mainJsModule = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "./js/main.js");
        await _mainJsModule.InvokeVoidAsync("hello");
    }
}